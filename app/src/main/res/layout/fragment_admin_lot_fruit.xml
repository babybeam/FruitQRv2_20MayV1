<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminLotFruitFragment">



    <!--Content-->
    <ScrollView
        android:layout_above="@id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<TextView-->
            <!--android:layout_width="400dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="left"-->
            <!--android:text="รายการผลผลิต"-->
            <!--android:textColor="#000000"-->
            <!--android:textSize="33dp"-->
            <!--app:fontFamily="@font/fonts1" />-->


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="712dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@color/colorPrimary"-->
                    <!--android:gravity="center"-->
                    <!--android:text="รายการจัดการรอบซื้อ/ขาย"-->
                    <!--android:textColor="#ffffff"-->
                    <!--android:textSize="33dp"-->
                    app:fontFamily="@font/fonts1" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/txtShowDate"
                        android:layout_marginBottom="40dp"
                        android:text="วันที่เริ่มต้น:"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        app:fontFamily="@font/fonts1" />

                    <TextView
                        android:id="@+id/txtShowDatee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="dd-MM-yyyy"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        app:fontFamily="@font/fonts1" />
                    <!--android:text="ปฏิทิน"-->
                    <!--android:paddingTop="80dp"-->

                    <Button
                        android:id="@+id/btnSetDatee"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/calendar"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        app:fontFamily="@font/fonts1" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/txtShowDate2"
                        android:layout_marginBottom="40dp"
                        android:text="วันที่สิ้นสุด :"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        app:fontFamily="@font/fonts1" />

                    <TextView
                        android:id="@+id/txtShowDatee2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="dd-MM-yyyy"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        app:fontFamily="@font/fonts1" />
                    <!--android:text="ปฏิทิน"-->
                    <!--android:paddingTop="80dp"-->

                    <Button
                        android:id="@+id/btnSetDatee2"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/calendar"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        app:fontFamily="@font/fonts1" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="ชื่อผลไม้ :"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

                <EditText
                    android:hint="ชื่อผลไม้ : ส้ม"
                    android:id="@+id/txtFruit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    app:fontFamily="@font/fonts1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="จำนวน :"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

                <EditText
                    android:hint="จำนวน เช่น 5 "
                    android:id="@+id/txtFarmerLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    app:fontFamily="@font/fonts1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="หน่วยนับ :"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

                <EditText
                    android:hint="หน่วยนับ เช่น กิโลกรัม"
                    android:id="@+id/txtUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    app:fontFamily="@font/fonts1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="รุ่น :"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

                <EditText
                    android:hint="รุ่น เช่น มีด 1  "
                    android:id="@+id/txtlot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    app:fontFamily="@font/fonts1" />




            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <!--Button Add-->
    <Button
        android:background="@drawable/tabsave"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnSave"
        android:text="บันทึก"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>