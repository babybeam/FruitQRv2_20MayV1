<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminSaleFragment">



    <!--Content-->
    <ScrollView
        android:layout_above="@id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<TextView-->
            <!--android:layout_width="400dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="left"-->
            <!--android:text="รายการผลผลิต"-->
            <!--android:textColor="#000000"-->
            <!--android:textSize="33dp"-->
            <!--app:fontFamily="@font/fonts1" />-->


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="712dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="รายการจัดการขายผลผลิต"
                    android:textColor="#ffffff"
                    android:textSize="33dp"
                    app:fontFamily="@font/fonts1" />

                <Spinner
                    android:id="@+id/spinnerFruit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    app:fontFamily="@font/fonts1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- android:inputType="number" ใส่ได้แค่ตัวเเลข-->
                    <EditText
                        android:id="@+id/edtAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="จำนวน "
                        android:inputType="number"
                        android:textSize="24dp"
                        app:fontFamily="@font/fonts1" />

                    <Spinner
                        android:id="@+id/spinnerUnit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        app:fontFamily="@font/fonts1" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/txtShowDate"
                        android:layout_marginBottom="40dp"
                        android:text="วันที่การเก็บเกี่ยว :"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        app:fontFamily="@font/fonts1" />

                    <TextView
                        android:id="@+id/txtShowDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="dd-MM-yyyy"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        app:fontFamily="@font/fonts1" />
                    <!--android:text="ปฏิทิน"-->
                    <!--android:paddingTop="80dp"-->

                    <Button
                        android:id="@+id/btnSetDate"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/calendar"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        app:fontFamily="@font/fonts1" />

                </RelativeLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="รอบการจัดการซื้อขาย:"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

                <EditText
                    android:hint="รอบการจัดการซื้อขาย : รุ่น1"
                    android:id="@+id/txtFarmerLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    app:fontFamily="@font/fonts1" />



            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <!--Button Add-->
    <Button
        android:background="@drawable/tabsave"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnSave"
        android:text="บันทึก"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>