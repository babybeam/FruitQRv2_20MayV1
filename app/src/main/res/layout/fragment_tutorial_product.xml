<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TutorialProductFragment">

    <ScrollView
        android:layout_above="@id/btnAddProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:scaleType="fitXY"
                android:src="@drawable/back" />

            <!--<ImageView-->

            <!--android:scaleType="fitXY"-->
            <!--android:src="@drawable/farmer"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" >-->




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/iconhome"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="1dp"
                    android:layout_height="84dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/iconhome"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textColor="#000000"
                    app:fontFamily="@font/fonts1"/>

                <Button
                    android:id="@+id/iconqrcode"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="1dp"
                    android:layout_height="84dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/iconqr"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textColor="#000000"
                    app:fontFamily="@font/fonts1"/>

                <Button
                    android:id="@+id/iconaddproduct"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="1dp"
                    android:layout_height="84dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/iconaddproduct"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/iconproduct"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="1dp"
                    android:layout_height="84dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/iconproduct2"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textColor="#000000"
                    app:fontFamily="@font/fonts1"/>

                <Button
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/iconlistqrcode"
                    android:background="@drawable/iconlistqrcode"
                    android:layout_width="1dp"
                    android:layout_height="84dp"
                    android:layout_weight="0.5"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textColor="#000000"
                    app:fontFamily="@font/fonts1"/>

                <Button
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/iconregister"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/iconregister"
                    android:layout_width="1dp"
                    android:layout_height="84dp"
                    android:layout_weight="0.5"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/iconaboutme"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="1dp"
                    android:layout_height="84dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/iconaboutme"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textColor="#000000"
                    app:fontFamily="@font/fonts1"/>

                <Button
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/iconmanual"
                    android:background="@drawable/iconmanual"
                    android:layout_width="1dp"
                    android:layout_height="84dp"
                    android:layout_weight="0.5"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textColor="#000000"
                    app:fontFamily="@font/fonts1"/>

                <Button
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/iconexit"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/iconexit"
                    android:layout_width="1dp"
                    android:layout_height="84dp"
                    android:layout_weight="0.5"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/fonts1" />

            </LinearLayout>







        </LinearLayout>

    </ScrollView>

</FrameLayout>